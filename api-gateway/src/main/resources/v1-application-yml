server:
  port: 8080

spring:
  application:
    name: api-gateway
  cloud:
    gateway:
      discovery:
        locator:
          enabled: true
    consul:
      discovery:
        register: true
      host: ${CONSUL_HOST:localhost}
      port: ${CONSUL_PORT:8500}
    loadbalancer:
      ribbon:
        enabled: false


# ENV. PROD (docker)
prod:
  uri:
    service-auth: lb://service-auth
    service-notif: lb://service-notif
    service-rdv-patients: lb://service-rdv-patients
    service-stock: lb://service-stockfournisseurs
    service-facture: lb://service-facturation

# ENV. DEV (localhost) => gÃ©rer dans la classe main de la gateway
